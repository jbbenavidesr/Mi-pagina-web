{% set posts = collections["posts_" + locale] %}
{% for post in posts | reverse %}
    {% if loop.first %}
        <ul>
        {% endif %}
        <li>
            <article>
                <p>
                    <time datetime="{{ post.date | date({weekday:undefined,year:undefined,month:undefined,day:undefined}) }}">{{ post.date | date({locale:locale}) }}</time>
                </p>
                <h3>
                    <a href="{{ post.url }}">{{ post.data.title }}</a>
                </h3>
            </article>
        </li>
        {% if loop.last %}
        </ul>
    {% endif %}
{% endfor %}