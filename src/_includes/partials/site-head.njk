<a class="[ visually-hidden focusable ] [ btn ]" href="#main-content">{{ header[locale].skipText }}</a>
<header role="banner" class="padding-top margin-bottom-large">
    <div class="container">
        <div class="">
            <a href="/{{ locale }}/" class="h1 no-style">
                {{ site.name }}
            </a>
            <nav class="padding-top" aria-label="Primary">
                <ul class="list-inline">
                    {% for item in header.navigation %}
                        <li>
                            <a href="/{{ locale }}{{ item.url }}">{{ item[locale] }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
    </div>
</header>